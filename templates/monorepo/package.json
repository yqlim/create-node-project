    "@packages/prettier-config": "workspace:*",
    "@packages/tsconfig": "workspace:*",
    "cspell": "^8.19.4",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.3.2",
