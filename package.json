{
  "name": "create-bootstrap",
  "version": "0.1.0",
  "description": "Create a new Node.js project with opinionated bootstrap.",
  "type": "module",
  "bin": "dist/index.js",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "lint": "eslint --cache --fix --max-warnings 0 .",
    "lint-staged": "lint-staged",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "spell-check": "cspell lint '**'",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:templates": "for dir in ./templates/*; do if [ -d \"$dir\" ]; then (cd \"$dir\" && pnpm test) fi done",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cspell/cspell-types": "^9.2.1",
    "@cspell/eslint-plugin": "^9.2.1",
    "@eslint/js": "^9.38.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@inquirer/testing": "^2.1.51",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.8.1",
    "@types/yargs": "^17.0.33",
    "cspell": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "micromatch": "^4.0.8",
    "prettier": "~3.6.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-sh": "^0.18.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "author": "yqlim <23203360+yqlim@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yqlim/create-node-project.git"
  },
  "bugs": {
    "url": "https://github.com/yqlim/create-node-project/issues"
  },
  "homepage": "https://github.com/yqlim/create-node-project#readme",
  "keywords": [
    "setup",
    "bootstrap",
    "create",
    "new",
    "project",
    "wizard",
    "node"
  ]
}
